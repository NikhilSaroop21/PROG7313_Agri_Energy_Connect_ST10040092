@model PROG7313_Agri_Energy_Connect_ST10040092.Models.FarmerViewModel

@{
    ViewData["Title"] = "Add Farmer";
}

<style>
    /* Set the base font and background color for the page */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #eef1f5;
        margin: 0;
        padding: 0;
    }
    /* Style for the centered form wrapper container */
    .form-wrapper {
        max-width: 520px;
        margin: 50px auto;
        background-color: #ffffff;
        padding: 30px 25px;
        border-radius: 12px;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.08);
    }
        /* Header for the form */
        .form-wrapper h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #333;
        }

    .form-group {
        margin-bottom: 20px;
    }

        /* Input field styling */
        .form-group label {
            display: block;
            margin-bottom: 6px;
            font-weight: 600;
            color: #444;
        }
        /* Input field focus effect */
        .form-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid #bbb;
            border-radius: 6px;
            transition: border-color 0.3s ease;
            font-size: 14px;
        }

            .form-group input:focus {
                border-color: #007bff;
                outline: none;
            }
        /* Validation message styling */
        .form-group span {
            color: #d9534f;
            font-size: 0.85em;
            margin-top: 4px;
            display: block;
        }
    /* Submit button styling */
    .submit-btn {
        width: 100%;
        padding: 12px;
        background-color: #007bff;
        color: white;
        font-weight: bold;
        border: none;
        border-radius: 6px;
        font-size: 16px;
        transition: background-color 0.3s ease;
        margin-top: 10px;
    }
        /* Submit button hover effect */
        .submit-btn:hover {
            background-color: #0056b3;
        }

    /* Success message style */
    .success-message {
        margin-top: 20px;
        text-align: center;
        font-weight: bold;
        color: #28a745;
    }
</style>

<div class="form-wrapper">
    <h2>Create New Farmer</h2>

    <form asp-action="AddFarmer" method="post">
        <div class="form-group">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" />
            <span asp-validation-for="FullName"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password"></span>
        </div>

        <button type="submit" class="submit-btn">Create Farmer</button>
    </form>

    @if (TempData["Success"] != null)
    {
        <div class="success-message">
            @TempData["Success"]
        </div>
    }
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
