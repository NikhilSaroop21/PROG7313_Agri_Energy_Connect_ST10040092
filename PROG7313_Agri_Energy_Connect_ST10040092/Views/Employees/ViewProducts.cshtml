@model IEnumerable<PROG7313_Agri_Energy_Connect_ST10040092.Models.Products>

@{
    ViewData["Title"] = "All Products";
}

<style>

    body {
        font-family: 'Fredoka', sans-serif;
        background: linear-gradient(to right, #e0f7fa, #f1f8e9);
        margin: 0;
        padding: 0;
        color: #2c3e50;
    }

    .page-wrapper {
        max-width: 1250px;
        margin: 60px auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 20px;
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.08);
    }

    .page-title {
        text-align: center;
        font-size: 36px;
        font-weight: 800;
        color: #007BFF;
        margin-bottom: 40px;
    }

    .filter-form {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 12px;
        margin-bottom: 40px;
    }

        .filter-form input {
            padding: 12px;
            width: 220px;
            border: 2px solid #cce0f4;
            border-radius: 10px;
            font-size: 15px;
            background-color: #fefefe;
            transition: border 0.3s ease;
        }

            .filter-form input:focus {
                border-color: #007BFF;
                outline: none;
                box-shadow: 0 0 6px rgba(0, 123, 255, 0.2);
            }

        .filter-form button {
            padding: 12px 24px;
            background: linear-gradient(to right, #4CAF50, #2e7d32);
            color: white;
            font-size: 16px;
            font-weight: 700;
            border: none;
            border-radius: 30px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 3px 8px rgba(0,0,0,0.1);
        }

            .filter-form button:hover {
                background: linear-gradient(to right, #388e3c, #1b5e20);
                transform: scale(1.03);
            }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 24px;
    }

    .product-card {
        background-color: #ffffff;
        border-radius: 20px;
        box-shadow: 0 8px 18px rgba(0, 0, 0, 0.08);
        padding: 22px;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        animation: fadeIn 0.4s ease-in-out;
    }

        .product-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 16px 26px rgba(0, 0, 0, 0.12);
        }

    .product-image {
        width: 160px;
        height: 160px;
        object-fit: cover;
        border-radius: 12px;
        border: 4px solid #81C784; /* Green */
        margin-bottom: 16px;
        background-color: #f5f5f5;
    }

    .product-title {
        font-size: 22px;
        font-weight: 800;
        color: #007BFF;
        margin-bottom: 10px;
    }

    .product-meta {
        font-size: 15px;
        color: #555;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .product-details {
        font-size: 15px;
        color: #333;
        font-weight: 500;
    }

        .product-details a {
            color: #007BFF;
            text-decoration: none;
            font-weight: 700;
        }

            .product-details a:hover {
                text-decoration: underline;
            }

   

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

  

    {
        flex-direction: column;
        align-items: center;
    }

    .product-image {
        width: 120px;
        height: 120px;
    }

    }
</style>

<div class="page-wrapper">
    <h2 class="page-title">🌾 All Farmers' Products</h2>

    <form asp-action="FilterProducts" method="post" class="filter-form">
        <input name="type" placeholder="Product Type" />
        <input name="fromDate" type="date" />
        <input name="toDate" type="date" />
        <button type="submit">🔍 Filter</button>
    </form>

    <div class="product-grid">
        @foreach (var p in Model)
        {
            <div class="product-card">
                @if (!string.IsNullOrEmpty(p.ImagePath))
                {
                    <img src="@p.ImagePath" alt="Product Image" class="product-image" />
                }
                else
                {
                    <img src="~/images/placeholder.png" alt="No Image" class="product-image" />
                }

                <div class="product-title">@p.Name</div>
                <div class="product-meta">@p.Type | Produced: @p.ProductionDate.ToShortDateString()</div>
                <div class="product-details">
                    👨‍🌾 <strong>@p.Farmer?.Name</strong><br />
                    ✉️ <a href="mailto:@p.Farmer?.Email">@p.Farmer?.Email</a>
                </div>
            </div>
        }
    </div>
</div>
