    ViewData["Title"] = "Home Page";
}

<style>

    body {
        font-family: 'Fredoka', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f2f4f8;
        color: #1a1a1a;
    }

    .hero-section {
        background: linear-gradient(135deg, #4CAF50, #FFEB3B, #2196F3);
        padding: 80px 30px;
        text-align: center;
        color: black;
        border-radius: 0 0 30px 30px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    }

        .hero-section h1 {
            font-size: 48px;
            font-weight: 800;
            margin-bottom: 20px;
            color: black;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
        }

        .hero-section p {
            font-size: 20px;
            max-width: 850px;
            margin: 0 auto;
            line-height: 1.8;
            font-weight: 800;
            color:black;
        }

    .section {
        max-width: 1100px;
        margin: 50px auto;
        padding: 40px;
        background-color: #ffffff;
        border-radius: 16px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.06);
    }

        .section.blue {
            background-color: #e3f2fd;
        }

        .section.green {
            background-color: #e8f5e9;
        }

        .section.yellow {
            background-color: #fffde7;
        }

        .section h2 {
            color: #007BFF;
            font-weight: 800;
            font-size: 26px;
            margin-bottom: 18px;
        }

        .section p, .section li {
            font-size: 17px;
            font-weight: 500;
            line-height: 1.8;
            color: #333;
        }

        .section ul {
            padding-left: 24px;
        }

    .learn-link {
        display: inline-block;
        margin-top: 25px;
        background: linear-gradient(to right, #4CAF50, #FFEB3B);
        color: #1a1a1a;
        padding: 12px 26px;
        border-radius: 30px;
        font-weight: bold;
        text-decoration: none;
        box-shadow: 0 3px 8px rgba(0,0,0,0.1);
